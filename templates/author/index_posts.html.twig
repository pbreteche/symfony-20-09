{% extends 'base.html.twig' %}

{% block title %}Derniers articles de {{ author.nickname }}{% endblock %}

{% block body %}
    <h1>{{ ('Derniers articles de '~author.nickname) | upper }}</h1>
    <ul>
        {% for post in posts %}
            <li><a href="{{ path('app_portal_post_show', {id: post.id}) }}">{{ post.title }}</a></li>
        {% endfor %}
    </ul>
{% endblock %}